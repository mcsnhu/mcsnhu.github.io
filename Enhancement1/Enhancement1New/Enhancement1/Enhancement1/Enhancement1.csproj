<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>disable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\MoonTools.ECS\MoonTools.ECS.csproj" />
    <ProjectReference Include="..\MoonWorks\MoonWorks.csproj" />
  </ItemGroup>

  <Target Name="CopyDLL" BeforeTargets="Build">
    <ItemGroup>
      <Binaries Include="..\DLL\**\*.*" />
    </ItemGroup>
    <Message Text="Copying DLLs..." Importance="High" />
    <Copy SourceFiles="@(Binaries)" DestinationFolder="$(TargetDir)\%(RecursiveDir)" SkipUnchangedFiles="false" />
  </Target>

  <Target Name="CopyData" BeforeTargets="Build">
    <ItemGroup>
      <Data Include="..\Data\**\*.*" />
    </ItemGroup>
    <Message Text="Copying data..." Importance="High" />
    <Copy SourceFiles="@(Data)" DestinationFolder="$(TargetDir)\Data\%(RecursiveDir)" SkipUnchangedFiles="false" />
  </Target>

</Project>